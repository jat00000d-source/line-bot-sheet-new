# LINE Bot 設定
CHANNEL_ACCESS_TOKEN=你的LINE_CHANNEL_ACCESS_TOKEN
CHANNEL_SECRET=你的LINE_CHANNEL_SECRET

# Google Sheets API 設定
GOOGLE_SERVICE_ACCOUNT_EMAIL=你的服務帳號Email
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n你的私鑰內容\n-----END PRIVATE KEY-----\n"
GOOGLE_SHEET_ID=你的Google_Sheet_ID

# 伺服器設定
PORT=3000

# 時區設定
TZ=Asia/Taipei

# 調試模式（可選）
DEBUG=false

# 提醒設定（可選）
REMINDER_CHECK_INTERVAL=60000  # 檢查間隔（毫秒）
MAX_REMINDERS_PER_USER=100     # 每位用戶最大提醒數量
CLEANUP_DAYS=30                # 清理過期記錄的天數

# 通知設定（可選）
DAILY_SUMMARY_ENABLED=true     # 是否發送每日摘要
WEEKLY_REPORT_ENABLED=true     # 是否發送每週報告
