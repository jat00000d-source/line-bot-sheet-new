# .env (環境變數配置檔案)

# LINE Bot 設定
CHANNEL_ACCESS_TOKEN=你的LINE_BOT_ACCESS_TOKEN
CHANNEL_SECRET=你的LINE_BOT_CHANNEL_SECRET

# 伺服器設定
PORT=3000
DEBUG_MODE=true

# Google 服務帳號金鑰 (JSON 格式，需要轉換成字串)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id","private_key_id":"your-key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"your-client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com"}

# 記帳用的 Google Sheets ID (從 Google Sheets 網址中取得)
EXPENSE_SPREADSHEET_ID=1ABC123DEF456GHI789JKL_你的記帳試算表ID
EXPENSE_SHEET_NAME=expenses

# 待辦事項用的 Google Sheets ID (需要另外建立)
TODO_SPREADSHEET_ID=1XYZ789ABC123DEF456GHI_你的待辦試算表ID
TODO_SHEET_NAME=todos

# 提醒事項的工作表名稱 (與待辦共用同一個檔案)
REMINDER_SHEET_NAME=reminders

# 可選的設定
DEFAULT_CURRENCY=TWD
DEFAULT_TIMEZONE=Asia/Taipei
DEFAULT_LANGUAGE=zh-tw
